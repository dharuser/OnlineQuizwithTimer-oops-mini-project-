// Custom Exceptions and File Handling
class QuizFileNotFoundException extends Exception {
    public QuizFileNotFoundException(String message) {
        super(message);
    }
}

class FileLoader {
    public static List<Question> loadQuestions(String filePath) throws QuizFileNotFoundException {
        List<Question> questions = new ArrayList<>();
        try (BufferedReader br = new BufferedReader(new FileReader(filePath))) {
            String line;
            while ((line = br.readLine()) != null) {
                String[] parts = line.split(",");
                questions.add(new MCQQuestion(parts[0], Arrays.copyOfRange(parts, 1, 5), Integer.parseInt(parts[5])));
            }
        } catch (IOException e) {
            throw new QuizFileNotFoundException("File not found: " + filePath);
        }
        return questions;
    }
}
